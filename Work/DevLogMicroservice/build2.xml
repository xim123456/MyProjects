<project name="DevLogMicroservice" default="run" basedir="/root/utp1/git/backend/DevLogMicroservice"> 
	<property name="src" location="src"/>
	<property name="lib" location="lib"/>
	<property name="build" location="DevLogMicroservice.class"/>

	<path id="lib.classpath">
		<fileset dir="${lib}">
				<include name="**/*.jar"/>
		</fileset>
	</path>

	<path id="lib.classpath2">
		<fileset dir="${lib}">
				<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${build}">
				<include name="**/*.jar"/>
		</fileset>
	</path>

	<target name="clean">
        	<delete includeEmptyDirs="true">  
            		<fileset dir="${build}"/>  
        	</delete>  
	</target>

	<target name="init" depends="clean">
		<mkdir dir="${build}"/>
	</target>

	<target name="build" depends="init">
		<javac srcdir="${src}" destdir="${build}">
            <classpath refid="lib.classpath"/>
		</javac>	
	</target>

	<target name="jar" depends="build">
		<jar destfile="${build}/${ant.project.name}.jar" basedir="${build}"/>
	</target>

	<target name="run" depends="jar">
		<java fork="true" spawn="true" classname="devlogmicroservice.DevLogMicroservice">
			<arg value="141.8.198.38"/> 
			<arg value="dev_log_queue"/> 
			<arg value="log_queue"/> 
			<arg value="5672"/> 
			<classpath refid="lib.classpath2"/>
		</java>
	</target>
</project>