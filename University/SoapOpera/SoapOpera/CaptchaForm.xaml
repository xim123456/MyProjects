<Window x:Class="SoapOpera.CaptchaForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoapOpera"
        mc:Ignorable="d"
        Title="CaptchaForm" Height="231" Width="300">
    <Grid>
        <Image x:Name="image" Margin="0,0,0,61"/>
        <TextBox x:Name="textBox" TextWrapping="Wrap" Margin="10,0,10,33" Height="23" VerticalAlignment="Bottom"/>
        <Button x:Name="button" Content="Ok" Margin="10,0,10,6" Click="button_Click" Height="22" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
